module data.maybe.control

from data.maybe import *

from control.functor import *
from control.applicative import *
from control.monad import *

define Functor MayBe {
  def pure = Some
  def fmap f (Some v) = Some (f v)
  def fmap _ None     = None
}

define Applicative MayBe {
  def (<*>) (Some f) v = f fmap v
  def (<*>) None     _ = None
}

define (a) Monad (MayBe a) {
  def (>>=) f (Some v) = f v
  def (>>=) f None     = None
}