module lang.data.string

from lang.core.comparable import (Equatable)
from lang.core.numerical import (Concat)

data String : type

define Equatable String {
    def (==) i j = native2 "String.equals" i j
}

define Concat Stringify Stringify String {
    def (+) i j = native2 "String.concat" (toString i) (toString j)
}

define Monoid String {
    def mempty  = ""
    def mappend = (+)
}
