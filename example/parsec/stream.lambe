trait Reader s {
    -{
        Stream type should be specified in each implementation of the Reader trait
    }
    kind Stream = type -> type

    sig next : self -> Option e * self for Stream s
}

-{
    Example where `Stream` is incarnated by a `List`
}

impl forall a. Reader a {
    type Stream = List

    def next =
        when self
        is Nil -> None, self
        is (::) -> Some self.head, self.tail

}