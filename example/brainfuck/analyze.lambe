impl lang.pair

impl program

data Pure
data Impure
type Purity = Pure | Impure

impl for Purity {
    sig fold : (Pure -> b) -> (Impure -> b) -> b

    def fold p i =
        when self {
            is Pure   -> p self
            is Impure -> i self
        }
}

type Parsed = Pair Program Purity

trait Analyse for Program {
    sig optimise : self -> self
    sig purity   : self -> Purity
}
