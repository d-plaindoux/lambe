impl control

type Try a =
  data Failure { reason : string }
| data Success { value  : a }

impl for Try a {
    sig fold : self -> (Failure -> b) -> (Success a -> b) -> b

    def fold f s =
        when self {
        | Failure -> f self
        | Success -> s self
        }
}

impl Monad Try {
    def pure a = Success a

    def (<*>) a =
        case self fold { Failure $1.reason } { a fmap $1.value }

    def join =
        self fold { Failure $1.reason } { $1.value }
}
