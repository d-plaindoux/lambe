use bool
use unit

data If { cond : bool }
data Then a { cond : bool; then : Unit -> a }

sig if : bool -> If
def if = If

impl If {
    sig then : forall a. self -> (unit -> a) -> Then a
    def then t = Then self.cond t
}

impl forall a. Then a {
    sig else : self -> (unit -> a) -> a
    def else f = self cond () fold { self then () } { f () }
}

sig if <p> then else
